<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape>
            <corners android:radius="2dp" />
            <!--<size android:height="4dp"/>-->
            <solid android:color="#66000000"/>
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <scale
            android:scaleWidth="100%">
            <layer-list>
                <item
                    android:id="@+id/progressGlow"
                    android:top="1dp"
                    android:bottom="1dp"
                    android:left="1dp"
                    android:right="1dp">
                    <shape
                        android:shape="rectangle"
                        android:innerRadius="4dp">
                        <corners android:radius="4dp" />
                        <!--<size android:height="6dp"/>-->
                        <solid android:color="#66ffffff" />
                    </shape>
                </item>
                <item
                    android:id="@+id/progressFill"
                    android:top="1dp"
                    android:bottom="1dp"
                    android:left="1dp"
                    android:right="1dp">
                    <shape
                        android:shape="rectangle"
                        android:innerRadius="2dp">
                        <corners android:radius="2dp" />
                        <solid android:color="#ffffff" />
                        <!--<size android:height="4dp"/>-->
                    </shape>
                </item>
            </layer-list>
        </scale>
    </item>
</layer-list>
