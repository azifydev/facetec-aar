<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".IDFeedbackFragment">

    <View
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </View>

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="-55dp"
        android:alpha="0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:clipChildren="false">

            <FrameLayout
                android:id="@+id/iconFrameLayout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:clipChildren="false"
                android:clipToPadding="false">

                <RelativeLayout
                    android:id="@+id/iconImageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/backIconImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/facetec_internal_id_card_back"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:alpha="0"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/frontIconImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/facetec_internal_id_card_front"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/messageTextView"
                android:text="@string/FaceTec_idscan_feedback_flip_id_to_back_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iconFrameLayout"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.1"
                android:textSize="20sp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>