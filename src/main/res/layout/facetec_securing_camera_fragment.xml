<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecuringCameraFragment">

    <View
        android:id="@+id/mainBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainContainer"
        android:translationY="-55dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <FrameLayout
                android:id="@+id/animationFrameLayout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:clipChildren="false"
                android:clipToPadding="false">

                <ImageView
                    android:id="@+id/animationBackgroundImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/facetec_securing_camera_background_drawable"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    tools:ignore="ContentDescription,VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/animationForegroundImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/facetec_securing_camera_foreground_drawable"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    tools:ignore="ContentDescription,VectorDrawableCompat" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animationFrameLayout"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <com.facetec.sdk.at
                    android:id="@+id/messageTextView"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/facetec_default_foreground"
                    android:gravity="center_horizontal|top"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:lineSpacingMultiplier="1.1"
                    android:alpha="1"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>